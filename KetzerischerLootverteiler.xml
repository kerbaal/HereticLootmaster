<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
  ..\FrameXML\UI.xsd">
    <Script file="KetzerischerLootverteiler.lua"/>

    <Button name="HereticLootTally" virtual="true">
      <Size x="70" y="20"/>
      <Layers>
        <Layer level="OVERLAY">
          <FontString name="$parentReceived" inherits="GameFontHighlightSmall" justifyH="RIGHT" parentKey="received">
            <Size x="50" y="20"/>
            <Anchors>
              <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT" x="0" y="0"/>
            </Anchors>
          </FontString>
          <FontString name="$parentDonated" inherits="GameFontHighlightSmall" justifyH="LEFT" parentKey="donated">
            <Size x="20" y="20"/>
            <Anchors>
              <Anchor point="TOPRIGHT" relativeTo="$parentReceived" relativePoint="TOPLEFT" x="0" y="0"/>
            </Anchors>
          </FontString>
        </Layer>
      </Layers>
      <Scripts>
        <OnEnter>
            HereticLootTally_OnEnter(self, motion)
            self:GetParent():LockHighlight()
        </OnEnter>
        <OnLeave>
            self:GetParent():UnlockHighlight()
            GameTooltip:Hide();
        </OnLeave>
      </Scripts>
    </Button>

    <Button name="HereticPlayerInfoTemplate" virtual="true">
      <Size x="430" y="20"/>
      <Layers>
        <Layer level="BACKGROUND">
          <FontString name="$parentName" inherits="GameFontNormal" justifyH="LEFT" parentKey="name">
            <Size x="150" y="1"/>
            <Anchors>
              <Anchor point="TOPLEFT" x="5" y="-10"/>
            </Anchors>
          </FontString>
        </Layer>
      </Layers>
      <Frames>
        <Button name="$parentHereticLootTally" inherits="HereticLootTally" parentKey="lootTally">
          <Anchors>
            <Anchor point="TOPRIGHT" relativeTo="$parent" relativePoint="TOPRIGHT" x="0" y="0"/>
          </Anchors>
        </Button>
      </Frames>
      <Scripts>
        <OnClick>
          HereticPlayerInfo_OnClick(self);
        </OnClick>
        <OnEnter>
          HereticPlayerInfo_OnEnter(self);
        </OnEnter>
        <OnLeave>
          GameTooltip:Hide();
        </OnLeave>
      </Scripts>
      <HighlightTexture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD">
        <Anchors>
          <Anchor point="TOPLEFT" x="-10" y="-2"/>
          <Anchor point="BOTTOMRIGHT" x="10" y="-2"/>
        </Anchors>
      </HighlightTexture>
    </Button>

    <Frame name="KetzerischerLootverteilerFrame" parent="UIParent" frameLevel="5" toplevel="true" frameStrata="MEDIUM" movable="true" enableMouse="true" clampedToScreen="true" hidden="true">
        <Size x="470" y="310"/>
        <TitleRegion>
            <Size x="470" y="20"/>
            <Anchors><Anchor point="TOP"/>
            </Anchors>
        </TitleRegion>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <!-- <BackgroundInsets>
        <AbsInset left="5" right="5" top="5" bottom="5"/>
      </BackgroundInsets>-->
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="5"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="KetzerischerLootverteilerTitleText" inherits="GameFontNormal" text="Ketzerischer Lootverteiler" parentKey="TitleText" wordwrap="false" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-5"/>
                        <Anchor point="LEFT" x="10"/>
                        <Anchor point="RIGHT" x="-10"/>
                    </Anchors>
                </FontString>
                <FontString name="KetzerischerLootverteilerStatusText" inherits="GameFontNormal" justifyH="LEFT" text="">
                    <Size>
                        <AbsDimension x="200" y="0"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOM" x="0" y="10"/>
                        <Anchor point="LEFT" x="10"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
          <Frames>

            <Button name="$parent_Close" parentKey="close" inherits="UIPanelCloseButton">
                <Size x="24" y="24"/>
                <Anchors>
                    <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="$parent">
                        <Offset x="0" y="0"/>
                    </Anchor>
                </Anchors>
            </Button>

            <Frame name="$parentTabView1" parentArray="tabView" hidden="true">
              <Size x="470" y="280"/>
              <Anchors>
                  <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="$parent">
                      <Offset x="0" y="-30"/>
                  </Anchor>
              </Anchors>
              <Frames>
                <ScrollFrame name="$parentContainer" inherits="HybridScrollFrameTemplate" parentKey="itemView">
                  <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="10" y="0"/>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="-24" y="35"/>
                  </Anchors>
                  <Frames>
                    <Slider name="$parentScrollBar" inherits="HybridScrollBarTemplate">
                      <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parent" x="0" y="-14"/>
                        <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="0" y="14"/>
                      </Anchors>
                    </Slider>
                  </Frames>
                  <Scripts>
                    <OnLoad function="HereticHistoryScrollFrame_OnLoad"/>
                    <OnShow>
                      HereticHistoryScrollFrame_Update()
                    </OnShow>
                  </Scripts>
                </ScrollFrame>
                <Button name="KetzerischerLootverteilerRarityDropDown" inherits="UIDropDownMenuTemplate" parentKey="dropDown">
                    <Scripts>
                        <OnShow function="KetzerischerLootverteilerRarityDropDown_OnShow"/>
                    </Scripts>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="KetzerischerLootverteilerFrame">
                            <Offset x="-10" y="-2"/>
                        </Anchor>
                    </Anchors>
                </Button>
                <Button name="$parentRollButton">
                  <Size>
                    <AbsDimension x="24" y="24"/>
                  </Size>
                  <Scripts>
                      <OnClick function="KetzerischerLootverteilerRollButton_OnClick"/>
                      <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
                        GameTooltip:SetText("Click here toggle the roll collector");
                      </OnEnter>
                      <OnLeave>
                        GameTooltip:Hide();
                      </OnLeave>
                  </Scripts>
                  <Anchors>
                      <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="KetzerischerLootverteilerRarityDropDown">
                          <Offset x="0" y="-2"/>
                      </Anchor>
                  </Anchors>
                  <DisabledTexture file="Interface\ButtonsUI-GroupLoot-Dice-Disabled"/>
                  <NormalTexture file="Interface\Buttons\UI-GroupLoot-Dice-Up"/>
                  <PushedTexture file="Interface\Buttons\UI-GroupLoot-Dice-Down"/>
                  <HighlightTexture file="Interface\Buttons\UI-GroupLoot-Dice-Highlight" alphaMode="ADD"/>
                </Button>
                <Button name="$parent_Help" parentKey="help">
                  <Size x="25" y="34"/>
                  <Layers>
                    <Layer level="ARTWORK" textureSubLevel="1">
                      <Texture parentKey="QuestionMark" inherits="QuestIcon-QuestionMark" hidden="false">
                        <Size x="13" y="22"/>
                        <Anchors>
                          <Anchor point="CENTER" relativeKey="$parent.QuestIconBg" x="0.5" />
                        </Anchors>
                      </Texture>
                    </Layer>
                  </Layers>
                  <Anchors>
                      <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent">
                          <Offset x="0" y="0"/>
                      </Anchor>
                  </Anchors>
                  <Scripts>
                      <OnClick function="KetzerischerLootverteilerRollButton_OnClick"/>
                      <OnEnter>
                        GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
                        GameTooltip:SetText("Shift-RightClick on item icon to delete.\nAlt+LeftClick on item icon to post in raid chat and clear roll collector.");
                      </OnEnter>
                      <OnLeave>
                        GameTooltip:Hide();
                      </OnLeave>
                  </Scripts>
                </Button>
              </Frames>
            </Frame>

            <Frame name="$parentTabView2" parentArray="tabView" hidden="true">
              <Size x="470" y="280"/>
              <Anchors>
                  <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="$parent">
                      <Offset x="0" y="-30"/>
                  </Anchor>
              </Anchors>
              <Frames>
                <ScrollFrame name="$parentContainer" inherits="HybridScrollFrameTemplate" parentKey="itemView">
                  <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="10" y="0"/>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="-24" y="35"/>
                  </Anchors>
                  <Frames>
                    <Slider name="$parentScrollBar" inherits="HybridScrollBarTemplate">
                      <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parent" x="0" y="-14"/>
                        <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="0" y="14"/>
                      </Anchors>
                    </Slider>
                  </Frames>
                  <Scripts>
                    <OnLoad function="HereticHistoryScrollFrame_OnLoad"/>
                    <OnShow>
                      HereticHistoryScrollFrame_Update()
                    </OnShow>
                  </Scripts>
                </ScrollFrame>
                <Button name="KetzerischerLootverteilerHistoryDropDown" inherits="UIDropDownMenuTemplate" parentKey="dropDown">
                    <Scripts>
                      <OnShow function="KetzerischerLootverteilerHistoryDropDown_OnShow"/>
                    </Scripts>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMLEFT" relativeTo="KetzerischerLootverteilerFrame">
                            <Offset x="-10" y="-2"/>
                        </Anchor>
                    </Anchors>
                </Button>
              </Frames>
            </Frame>

            <Frame name="$parentTabView3" parentArray="tabView" hidden="true">
              <Size x="470" y="280"/>
              <Anchors>
                  <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" relativeTo="$parent">
                      <Offset x="0" y="-30"/>
                  </Anchor>
              </Anchors>
              <Frames>
                <ScrollFrame name="$parentContainer" inherits="HybridScrollFrameTemplate" parentKey="itemView">
                  <Anchors>
                    <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent" x="5" y="0"/>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="-24" y="10"/>
                  </Anchors>
                  <Frames>
                    <Slider name="$parentScrollBar" inherits="HybridScrollBarTemplate">
                      <Anchors>
                        <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parent" x="0" y="-14"/>
                        <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" relativeTo="$parent" x="0" y="14"/>
                      </Anchors>
                    </Slider>
                  </Frames>
                  <Scripts>
                    <OnLoad function="HereticPlayerInfoScrollFrame_OnLoad"/>
                    <OnShow>
                      HereticPlayerInfoScrollFrame_Update()
                    </OnShow>
                  </Scripts>
                </ScrollFrame>
              </Frames>
            </Frame>


            <Button name="$parentTab1" inherits="CharacterFrameTabButtonTemplate" id="1" text="Master">
                <Anchors>
                    <Anchor point="LEFT" relativePoint="BOTTOMLEFT">
                        <Offset>
                            <AbsDimension x="16" y="-12"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick function="HereticTab_OnClick">
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="$parentTab2" inherits="CharacterFrameTabButtonTemplate" id="2" text="History">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentTab1" relativePoint="RIGHT">
                        <Offset>
                            <AbsDimension x="-16" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                  <OnClick function="HereticTab_OnClick"></OnClick>
                </Scripts>
            </Button>

            <Button name="$parentTab3" inherits="CharacterFrameTabButtonTemplate" id="3" text="Raid">
                <Anchors>
                    <Anchor point="LEFT" relativeTo="$parentTab2" relativePoint="RIGHT">
                        <Offset>
                            <AbsDimension x="-16" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                  <OnClick function="HereticTab_OnClick"></OnClick>
                </Scripts>
            </Button>

        </Frames>
        <Scripts>
            <OnLoad>KetzerischerLootverteilerFrame_OnLoad(self);</OnLoad>
            <OnDragStart>KetzerischerLootverteilerFrame_OnDragStart(self);</OnDragStart>
            <OnDragStop>KetzerischerLootverteilerFrame_OnDragStop(self);</OnDragStop>
        </Scripts>
    </Frame>
</Ui>

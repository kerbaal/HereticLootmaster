<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
  ..\FrameXML\UI.xsd">
  <Script file="HereticLootButton.lua"/>
  <Button name="HereticLootButton" inherits="ItemButtonTemplate" virtual="true">
      <Layers>
        <Layer level="OVERLAY">
          <Texture name="$parentIconQuestTexture">
            <Size x="37" y="38"/>
            <Anchors>
              <Anchor point="TOP" x="0" y="0"/>
            </Anchors>
          </Texture>
        </Layer>
        <Layer level="ARTWORK">
          <Texture name="$parentNameFrame" file="Interface\QuestFrame\UI-QuestItemNameFrame">
            <Size x="280" y="30"/>
            <Anchors>
              <Anchor point="BOTTOMLEFT" x="20" y="13"/>
            </Anchors>
          </Texture>
          <FontString name="$parentText" inherits="GameFontNormal" justifyH="LEFT" parentKey="itemName">
            <Size x="225" y="18"/>
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" relativeTo="$parent" x="12" y="0"/>
            </Anchors>
          </FontString>

          <FontString name="$parentTextItemSlot" inherits="GameFontNormal" justifyH="CENTER">
            <Color r="1" g="1" b="1" a="1"/>
            <Size x="100" y="18"/>
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="230" y="0"/>
            </Anchors>
          </FontString>
        </Layer>
      </Layers>
      <Scripts>
          <OnLoad>
              self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
              self.hasItem = 1;
          </OnLoad>
          <OnEnter>
              HereticLootButton_OnEnter(self, motion)
          </OnEnter>
          <OnLeave>
              GameTooltip:Hide();
              ResetCursor();
          </OnLeave>
          <OnUpdate>
              if ( GameTooltip:IsOwned(self) ) then HereticLootButton_OnEnter(self) end
              CursorOnUpdate(self);
          </OnUpdate>
          <OnClick function="HereticLootButton_OnClick"/>
      </Scripts>
      <Frames>
        <Button name="$parentTextItem">
          <Size x="70" y="18"/>
          <Anchors>
            <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="390" y="-3"/>
          </Anchors>
          <Layers>
            <Layer level="OVERLAY">
              <FontString name="$parentType" inherits="GameFontNormal" justifyH="RIGHT">
                <Color r="1" g="1" b="1" a="1"/>
                <Anchors>
                  <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="0"/>
                </Anchors>
              </FontString>
            </Layer>
          </Layers>
          <Scripts>
            <OnEnter>
                HereticLootButtonItemType_OnEnter(self, motion)
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide();
            </OnLeave>
          </Scripts>
        </Button>
      </Frames>
  </Button>

  <Button name="HereticDropButtonTemplate" virtual="true" hidden="true">
      <Size x="380" y="20"/>
      <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
          <TileSize>
              <AbsValue val="32"/>
          </TileSize>
          <EdgeSize>
              <AbsValue val="10"/>
          </EdgeSize>
          <Color r="0" g="0" b="0" a="0"/>
          <Bordercolor r="0" g="0" b="0" a="0"/>
          <BackgroundInsets>
              <AbsInset left="1" right="1" top="1" bottom="1"/>
          </BackgroundInsets>
      </Backdrop>
      <Layers>
          <Layer level="ARTWORK">
            <FontString name="$parentTextItemLevel" inherits="GameFontNormal" justifyH="LEFT" parentKey="itemLevelText">
              <Size x="30" y="18"/>
              <Anchors>
                <Anchor point="LEFT" relativePoint="LEFT" relativeTo="$parent" x="0" y="0"/>
              </Anchors>
            </FontString>
            <Texture name="$parentTexture" hidden="true" parentKey="itemSocketTexture">
              <Size>
                <AbsDimension x="12" y="12"/>
              </Size>
              <Anchors>
                <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" relativeTo="$parentTextItemLevel" x="0" y="2"/>
              </Anchors>
            </Texture>
            <FontString name="$parentDonatorText" inherits="GameFontNormalSmall" justifyH="LEFT" parentKey="donatorText">
              <Size x="85" y="8"/>
              <Anchors>
                <Anchor point="LEFT" relativePoint="RIGHT" relativeTo="$parentTexture" x="5" y="0"/>
              </Anchors>
            </FontString>
            <FontString name="$parentDate" inherits="GameFontNormalSmall" justifyH="LEFT" parentKey="dateText">
              <Size x="70" y="8"/>
              <Anchors>
                <Anchor point="LEFT" relativeTo="$parentDonatorText" relativePoint="RIGHT" x="5" y="0"/>
              </Anchors>
            </FontString>
          </Layer>
      </Layers>
      <Frames>
        <Button name="$parentWinnerFrame" inherits="HereticRollFrameTemplate" hidden="true" parentKey="winnerFrame">
          <Anchors>
            <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="0"/>
          </Anchors>
        </Button>
      </Frames>
      <Scripts>
        <OnLoad function="HereticDropButton_OnLoad"/>
      </Scripts>
  </Button>

  <Frame name="HereticLootFrame" virtual="true">
    <Size>
      <AbsDimension x="430" y="41"/>
    </Size>
    <Frames>
      <Button name="$parentButton" inherits="HereticLootButton" virtual="true" parentKey="itemButton">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent">
              <Offset x="0" y="0"/>
          </Anchor>
        </Anchors>
      </Button>
      <Button name="$parentDropButton" inherits="HereticDropButtonTemplate" hidden="false" parentKey="dropButton">
        <Anchors>
          <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="-20"/>
        </Anchors>
      </Button>
    </Frames>
  </Frame>
</Ui>

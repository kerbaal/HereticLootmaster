<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
  ..\FrameXML\UI.xsd">
  <Script file="HereticLootButton.lua"/>
  <Button name="HereticLootButton" inherits="ItemButtonTemplate" virtual="true">
      <!-- <HitRectInsets>
          <AbsInset left="0" right="-207" top="0" bottom="0"/>
      </HitRectInsets>-->
      <Layers>
        <Layer level="OVERLAY">
          <Texture name="$parentIconQuestTexture">
            <Size x="37" y="38"/>
            <Anchors>
              <Anchor point="TOP" x="0" y="0"/>
            </Anchors>
          </Texture>
        </Layer>
        <Layer level="ARTWORK">
          <Texture name="$parentNameFrame" file="Interface\QuestFrame\UI-QuestItemNameFrame">
            <Size x="240" y="30"/>
            <Anchors>
              <Anchor point="BOTTOMLEFT" x="20" y="-7"/>
            </Anchors>
          </Texture>
          <FontString name="$parentText" inherits="GameFontNormal" justifyH="LEFT">
            <Size x="193" y="18"/>
            <Anchors>
              <Anchor point="BOTTOMLEFT" relativePoint="BOTTOMRIGHT" x="8" y="0"/>
            </Anchors>
          </FontString>
          <FontString name="$parentTextItemLevel" inherits="GameFontNormal" justifyH="LEFT">
            <Size x="30" y="18"/>
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="8" y="0"/>
            </Anchors>
          </FontString>
          <Texture name="$parentTexture" hidden="true">
          <Size>
            <AbsDimension x="12" y="12"/>
          </Size>
          <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="38" y="-3"/>
          </Anchors>
        </Texture>
          <FontString name="$parentTextItemSlot" inherits="GameFontNormal" justifyH="CENTER">
            <Color r="1" g="1" b="1" a="1"/>
            <Size x="100" y="18"/>
            <Anchors>
              <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="70" y="0"/>
            </Anchors>
          </FontString>
        </Layer>
      </Layers>
      <Scripts>
          <OnLoad>
              self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
              self.hasItem = 1;
          </OnLoad>
          <OnEnter>
              HereticLootButton_OnEnter(self, motion)
          </OnEnter>
          <OnLeave>
              GameTooltip:Hide();
              ResetCursor();
          </OnLeave>
          <OnUpdate>
              if ( GameTooltip:IsOwned(self) ) then HereticLootButton_OnEnter(self) end
              CursorOnUpdate(self);
          </OnUpdate>
          <OnClick function="HereticLootButton_OnClick"/>
      </Scripts>
      <Frames>
        <Button name="$parentTextItem">
          <Size x="70" y="18"/>
          <Anchors>
            <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="210" y="-3"/>
          </Anchors>
          <Layers>
            <Layer level="OVERLAY">
              <FontString name="$parentType" inherits="GameFontNormal" justifyH="RIGHT">
                <Color r="1" g="1" b="1" a="1"/>
                <Anchors>
                  <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="0"/>
                </Anchors>
              </FontString>
            </Layer>
          </Layers>
          <Scripts>
            <OnEnter>
                HereticLootButtonItemType_OnEnter(self, motion)
            </OnEnter>
            <OnLeave>
                GameTooltip:Hide();
            </OnLeave>
          </Scripts>
        </Button>
      </Frames>
  </Button>

  <Button name="HereticSlotButtonTemplate" virtual="true" hidden="true">
      <Size x="170" y="20"/>
      <Backdrop bgFile="Interface\ChatFrame\ChatFrameBackground" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
          <TileSize>
              <AbsValue val="32"/>
          </TileSize>
          <EdgeSize>
              <AbsValue val="10"/>
          </EdgeSize>
          <Color r="0" g="0" b="0" a="0"/>
          <Bordercolor r="0" g="0" b="0" a="0"/>
          <BackgroundInsets>
              <AbsInset left="1" right="1" top="1" bottom="1"/>
          </BackgroundInsets>
      </Backdrop>

      <Layers>
          <Layer level="ARTWORK">
              <FontString name="$parentText" inherits="GameFontNormalSmall" justifyH="LEFT">
                  <Size x="95" y="8"/>
                  <Anchors>
                      <Anchor point="LEFT" relativeTo="$parent" relativePoint="LEFT" x="0" y="0"/>
                  </Anchors>
              </FontString>
          </Layer>
          <Layer level="ARTWORK">
              <FontString name="$parentDate" inherits="GameFontNormalSmall" justifyH="RIGHT" parentKey="dateText">
                  <Size x="70" y="8"/>
                  <Anchors>
                      <Anchor point="LEFT" relativeTo="$parentText" relativePoint="RIGHT" x="5" y="0"/>
                  </Anchors>
              </FontString>
          </Layer>
      </Layers>
  </Button>

  <Frame name="HereticLootFrame" virtual="true">
    <Size>
      <AbsDimension x="430" y="40"/>
    </Size>
    <Frames>
      <Button name="$parentButton" inherits="HereticLootButton" virtual="true">
        <Anchors>
          <Anchor point="TOPLEFT" relativePoint="TOPLEFT" relativeTo="$parent">
              <Offset x="0" y="0"/>
          </Anchor>
        </Anchors>
      </Button>
      <Button name="$parentFromButton" inherits="HereticSlotButtonTemplate" hidden="false">
        <Anchors>
          <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="0"/>
        </Anchors>
      </Button>
      <Button name="$parentWinnerFrame" inherits="HereticRollFrameTemplate" hidden="true">
        <Anchors>
          <Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" x="0" y="-18"/>
        </Anchors>
      </Button>
    </Frames>
    <Scripts>
      <OnLoad function="HereticLootFrame_OnLoad"/>
    </Scripts>
  </Frame>
</Ui>
